<a href="/c/{{id}}/{{uri name}}">
<header>
  <h1>{{name}}</h1>
  <span class="edit icon-sm icon-edit"></span>
    <ul>
    {{#if duedate}}
    <li>
      <span class="icon-sm icon-clock"></span><small>{{smDate duedate}}</small>
    </li>
    {{/if}}
    {{#if description}}
    <li>
      <span class="icon-sm icon-description"></small>
    </li>
    {{/if}}
    {{#if Comments}}
      <li>
        {{length Comments}}<span class="icon-sm icon-comment"></span>
      </li>
    {{/if}}
    </ul>
</header>
</a>
